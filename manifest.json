{
    "manifest_version": 3,
    "name": "Unit Converter",
    "version": "0.1",

    "description": "A simple extension to help you convert between different units",
    "icons": {"128": "icon_128.png"},

    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["conversion.js"],
            "css": ["styles.css"]
        }
    ]
}